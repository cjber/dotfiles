    eval "$__mamba_setup"
else
    if [ -f ".mamba/etc/profile.d/mamba.sh" ]; then
        . ".mamba/etc/profile.d/mamba.sh"
    else
        export PATH=".mamba/bin:$PATH"
    fi
fi
