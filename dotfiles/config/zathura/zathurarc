# Zathura configuration file
# See man `man zathurarc'

map i recolor

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100


#zoom settings
set zoom-min 10
set guioptions ""

set default-bg                  "#11121d"
set default-fg                  "#afafaf"

set statusbar-fg                "#bdae93"
set statusbar-bg                "#11121d"

set inputbar-bg                 "#11121d"
set inputbar-fg                 "#7c6f54"

set notification-error-bg       "#cc241d"
set notification-error-fg       "#11121d"

set notification-warning-bg     "#cc241d"
set notification-warning-fg     "#11121d"

set highlight-color             "#d79921"
set highlight-active-color      "#458588"

set completion-highlight-fg     "#7c6f54"
set completion-highlight-bg     "#689d6a"

set completion-bg               "#7c6f54"
set completion-fg               "#689d6a"

set notification-bg             "#98971a"
set notification-fg             "#11121d"

set recolor                     "true"
set recolor-lightcolor          "#11121d"
set recolor-darkcolor           "#c0caf5"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue             "false"

set render-loading "false"
set scroll-step 50

set selection-clipboard clipboard
