exec_always --no-startup-id picom -b --animations --animation-stiffness 350
exec --no-startup-id $HOME/.config/autostart/mouse.sh
exec --no-startup-id $HOME/.config/i3/resize.py
exec_always --no-startup-id nm-applet

exec --no-startup-id xautolock -time 15 -locker -corners "systemctl suspend"

