# Set inner/outer gaps
gaps inner 30
gaps outer 30
gaps bottom -10
gaps horizontal -10

# remove gaps
bindsym $mod+g gaps inner all toggle 30, gaps outer all toggle 30, gaps bottom all toggle -10, gaps horizontal all toggle -10

